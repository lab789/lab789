#include <iostream>
using namespace std;

int main() {
    string exp;
    cout << "Enter expression: ";
    cin >> exp;

    char stack[100];   // array used as stack
    int top = -1;      // top pointer

    for (int i = 0; i < exp.length(); i++) {
        char c = exp[i];

        // Push opening brackets
        if (c == '(' || c == '{' || c == '[') {
            stack[++top] = c;   // push
        }
        else if (c == ')' || c == '}' || c == ']') {

            if (top == -1) {    // stack empty
                cout << "Not Balanced";
                return 0;
            }

            char t = stack[top--];   // pop

            // mismatch check
            if ((c == ')' && t != '(') ||
                (c == '}' && t != '{') ||
                (c == ']' && t != '[')) {
                cout << "Not Balanced";
                return 0;
            }
        }
    }

    // final check
    if (top == -1)
        cout << "Balanced";
    else
        cout << "Not Balanced";

    return 0;
}
